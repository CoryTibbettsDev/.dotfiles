# fancy bashrc ascii art here

# Automatically start xserver when in tty1 with no window manager running
if [ "$(tty)" = "/dev/tty1" ]; then
	pgrep awesome || startx
fi

export PATH=$PATH:~/.cargo/bin

# Set editor details for programs that look for them
export VISUAL=nvim;
export EDITOR=nvim;

# https://wiki.archlinux.org/index.php/Git#Git_prompt
ESC=$(printf "\e")
CYAN="$ESC[36m"
RESETCOLOR="$ESC[0m"
# Bash Prompt
PS1='${CYAN}[\u@\h \W]\$ ${RESETCOLOR}'

alias ls='ls --color=auto'
alias ll='ls -la'

# Wholesome Unix
alias pls='sudo'
alias please='sudo'
# In case I switch to doas
# alias pls='doas --'
# alias please='doas --'

alias cl='clear'

# Alias for nvim editor
# e is easy to reach and I remember with e for edit
alias e='nvim'

# CLI file browser
alias r='ranger'

# Alias for YouTube command line search tool
alias yt='ytfzf'

alias youtube-dl='youtube-dl --no-call-home'
alias dl='youtube-dl --no-call-home'

# Set wallpaper again
alias wp='feh --recursive --bg-fill --randomize ~/.wallpaper &'

alias reload='source ~/.bashrc'

# Compile a groff document into a pdf
groffpdf() {
	RAWINPUTFILE=$(echo ${1} | awk -F. '{print $1}')
	COMPILEDFILE=${RAWINPUTFILE}.pdf
	printf "groff compiling %b to %b \n" ${1} ${COMPILEDFILE}
	groff -mom -T pdf ${1} > ${COMPILEDFILE}
}

unset SSH_ASKPASS
