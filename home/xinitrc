# .xinitrc

# Source library file
if [ ! -f "${LIBRARY_FILE}" ]; then
	printf "LIBRARY_FILE[%s] does not exist\n" "${LIBRARY_FILE}"
	return
fi
. "${LIBRARY_FILE}"

# Set Wallpaper
eval "${set_wallpaper_cmd}" || log_func "Error setting wallpaper in .xinitrc"

# Set Xmodmap if file exists
if [ -f "$HOME/.Xmodmap" ]; then
	xmodmap "$HOME/.Xmodmap" || log_func "Error xmodmap ~/.Xmodmap in .xinitrc"
fi
# Run xrdb to load .Xresources if file exists
if [ -f "$HOME/.Xresources" ]; then
	xrdb -merge "$HOME/.Xresources" || log_func "Error xrdb ~/.Xresources in /xinitrc"
fi

# Start Window Manager
exec "${window_manager}"
