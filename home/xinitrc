# .xinitrc

# Source library file
if [ ! -f "${LIBRARY_FILE}" ]; then
	printf "LIBRARY_FILE[%s] does not exist\n" "${LIBRARY_FILE}"
	return
fi
. "${LIBRARY_FILE}"

# Set Wallpaper
eval "${wallpaper_set_cmd}" &

# Set Xmodmap if file exists
if [ -f "$HOME/.Xmodmap" ]; then
	xmodmap "$HOME/.Xmodmap" || log_func "Error xmodmap ~/.Xmodmap"
fi
# Run xrdb to load .Xresources if file exists
if [ -f "$HOME/.Xresources" ]; then
	xrdb "$HOME/.Xresources" || log_func "Error xrdb ~/.Xresources"
fi

# Start Window Manager
exec "${window_manager}"
